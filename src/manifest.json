{
    "manifest_version": 3,
    "version": "1.3.0",
    "name": "Quick Query Question",
    "description": "AI that reconstructs text",
    "permissions": [
        "activeTab",
        "tabs",
        "contextMenus",
        "scripting",
        "clipboardWrite",
        "storage"
    ],
    "background": {
      "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/contents.js"],
            "css": ["css/contents.css", "css/loader.css"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
          "resources": ["images/loading.png"],
          "matches": ["<all_urls>"],
          "use_dynamic_url": false
        }
    ],
    "options_page": "html/options.html",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_icon":{
            "16": "icons/16.png",
            "32": "icons/32.png"
        },
        "default_popup": "html/popup.html"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+Q",
                "mac": "MacCtrl+Shift+Q"
            },
            "description": "Open the popup"
        }
    }
}
 
